    this.tokenId = LocalUserInfo.tokenId
    this.userName = LocalUserInfo.realName
    this.userAvatar = LocalUserInfo.avatarBase64 ? LocalUserInfo.avatarBase64 : require('#/images/portrait_bg.png')

