<script>

import dayjs from '#/static/utils/dayjs'

const sourceType = [['camera'], ['album'], ['camera', 'album']]
const sizeType = [['compressed'], ['original'], ['compressed', 'original']]

export default {
  config: {
    navigationStyle: 'custom',
    backgroundColor: '#F6F6F6',
    disableIosGesture: true,
    navigationBarTextStyle: 'white',
    delay: true
  },
  data () {
    return {
      pageTitle: '材料进场任务',
      pageTitleRight: '统计',
      tokenId: '',
      itemName: '',
      itemId: '',
      xunChaNo: '', 
      xunChaTime: '', // 巡查时间
      isReply: false, // 是否回复
      xunChaPosition: '', // 巡查部位

      // 存在的问题
      xunChaItemProblem: '', 
      // 处理意见
      xunChaResolution: '',
      // 附件
      accessoryContent: []
    }
  },
  methods: {
    // 返回按钮
    navigateBack () {
      ui.showConfirm({
        content: '表单尚未提交，你要离开么？',
        confirmButtonText: '离开',
        cancelButtonText: '继续填写',
        success: (result) => {
          if (result.confirm) {
            ui.navigateBack()
          }
        }
      })
    },
    // 是否回复
    handleSwitchChange (val) {
      this.isReply = val
    },
    // 添加附件
    addAccessory () {
      this.chooseImage(2)
    },
    // 删除附件
    deleteAccessory (index, imgPath) {
      console.log('删除：', index, imgPath)
      this.accessoryContent.splice(index, 1)
    },
    chooseImage (index) {
      ui.chooseImage({
        sourceType: sourceType[index],
        sizeType: sizeType[1],
        success: (res) => {
          res.tempFilePaths.forEach((item, index) => {
            // this.accessoryContent.push(item)
            this.accessoryContent.push({
              id: index,
              imgsrc: item
            })
          })
        },
        fail: (res) => {
          console.log("添加照片失败")
        }
      })
    },
    // 提交
    submit () {
      if (this.itemName === '') {
        ui.showToast({ title: '请输入单位工程名称' })
      } else if (this.xunChaItemProblem === '') {
        ui.showToast({ title: '请输入存在的问题' })
      } else if (this.xunChaResolution === '') {
        ui.showToast({ title: '请输入处理意见' })
      } else {
      //  this.paySubmit()
        let LocalXunChaInfoList = ui.getStorageSync('LocalXunChaInfoList')
        LocalXunChaInfoList.xunChaInfoList.push({
          xunChaNo: this.xunChaNo,
          itemName: this.itemName,
          xunChaTime: this.xunChaTime,
          isReply: this.isReply, // 是否需要回复
          xunChaPosition: this.xunChaPosition,
          xunChaItemProblem: this.xunChaItemProblem,
          xunChaResolution: this.xunChaResolution,
          accessoryContent: this.accessoryContent
        })
        console.log('LocalXunChaInfoList:', LocalXunChaInfoList)
        ui.setStorageSync('LocalXunChaInfoList', LocalXunChaInfoList)

        ui.showToast({ title: '提交成功', icon: 'success' })
        
        window.setTimeout(() => {
          ui.navigateBack()
        }, 1000)
      }
    },
    paySubmit () {
      ui.showToast({ title: '提交成功', icon: 'success' })
      setTimeout(() => {
        ui.navigateBack()
      }, 1000)
    }
  },
  mounted () {
    
    let LocalUserInfo = ui.getStorageSync('LocalUserInfo')
    console.log("旁站:", LocalUserInfo)
    this.tokenId = LocalUserInfo.tokenId ? LocalUserInfo.tokenId : ''

    let LocalProjectInfoList = ui.getStorageSync('LocalProjectInfoList')
    console.log("旁站页面：", LocalProjectInfoList[0])
    this.itemName = LocalProjectInfoList[0].itemName
    this.itemId = LocalProjectInfoList[0].itemId

    this.xunChaTime = dayjs().format("YYYY-MM-DD HH:mm")

  }
}
</script>

