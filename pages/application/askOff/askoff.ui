<script>
const getDoubleNumber = function (num) {
  return num < 10 ? '0' + num : '' + num
}
const sourceType = [['camera'], ['album'], ['camera', 'album']]
const sizeType = [['compressed'], ['original'], ['compressed', 'original']]
export default {
  config: {
    navigationStyle: 'custom',
    backgroundColor: '#F6F6F6',
    disableIosGesture: true,
    navigationBarTextStyle: 'white',
    "delay":true
  },
  data () {
    return {
      typeList: ['事假','病假','外出','婚假','产检假','产假','其他'],
      typeValue: 0,

      userName: '傅毅',
      userId: '10010',
      // 日期选择 开始日期时间和结束日期时间
      sdataValue: '',
      stimeValue: '', 
      edataValue: '',
      etimeValue: '', 

      // 请假天数
      dayNumber: '',
      
      // 请假事由
      askOffReason: '',

      // 审批人
      isApprover: false,
      addroverHead: '',
      approverName: '',
      approverList: [],
      approvalUserId: null,
      approvalUserId2: null,

      // 抄送人
      recipientsList: [ ],
      ccuserIds: []

    }
  },
  methods: {
    // 返回按钮
    navigateBack () {
      ui.showConfirm({
        content: '表单尚未提交，你要离开么？',
        confirmButtonText: '离开',
        cancelButtonText: '继续填写',
        success: (result) => {
          if (result.confirm) {
            ui.offBackButtonClick({
              listener: this.navigateBack
            })
            ui.navigateBack()
          }
        }
      })
    },
    handleType (val) { // 请假类型
      this.typeValue = val
    },
    // 选择请假开始日期
    choiceSDate (val) {
      this.sdataValue = val
    },
    handleSTime (val) { // 请假开始时间
      this.stimeValue = val
    },
    // 选择请假结束日期
    choiceEDate (val) {
      this.edataValue = val
    },
    handleETime (val) { // 请假结束时间
      this.etimeValue = val
    },
    
    // 添加抄送人
    addRecipients () {
      import(`#/pages/contacts/workers.ui`).then((content) => {
        ui.showDialog({
          content: content,
          statusBarColor: 'black',
          data: {},
          // 接收ui.hideDialog回传的数据
          onHide: (data) => {
            console.log('接收返回的参数', data)
            if (data && data.recipients) {
              let isSame = false
              data.recipients.forEach((item, index) => {
                if (this.ccuserIds.length < 1) {
                  this.recipientsList.push(item)
                  this.ccuserIds.push(item.userId)
                } else {
                  for (let i = 0; i < this.ccuserIds.length; i++) {
                    if (item.userId === this.ccuserIds[i]) {
                      ui.showToast({ title: '请勿选择同一个抄送人！' })
                      isSame = false
                      return false
                    } else {
                      isSame = true
                    }
                  }
                  if (isSame) {
                    this.recipientsList.push(item)
                    this.ccuserIds.push(item.userId)
                  }
                }
              })
            }
          }
        })
      })
    },
    deleteRecipients (index) {
      console.log(index)
      this.recipientsList.splice(index, 1)
      this.ccuserIds.splice(index, 1)
    },
    // 添加审批人
    addApprovers () {
      if (this.approverList.length > 0) {
        ui.showToast({ title: '审批人只能为一人,请删除后添加' })
      } else if (this.askOffReason === '') {
        ui.showToast({ title: '请输入请假事由' })
      } else {
        import(`#/pages/contacts/workers.ui`).then((content) => {
          console.log("进来了",content)
          ui.showDialog({
            content: content,
            statusBarColor: 'black',
            data: {
              dayNumber: this.dayNumber
            },
            // 接收ui.hideDialog回传的数据
            onHide: (data) => {
              console.log('接收返回的参数', data)
              if (data && data.approvers) {
                this.approverList = []
                data.approvers.forEach((item, index) => {
                  this.approverList.push(item)
                  this.approvalUserId = item.userId
                })
              }
              if (data && data.approvers2) {
                this.approvalUserId2 = null
                data.approvers2.forEach((item, index) => {
                  this.approvalUserId2 = item.userId
                })
              }
            }
          })
        })
      }
    },
    // 删除审批人
    deleteApprovers (index) {
      // console.log(index)
      this.approverList.splice(index, 1)
      this.approvalUserId = null
    },
    submit () {
      if (this.askOffReason === '') {
        ui.showToast({ title: '请输入请假事由' })
      } else if (this.approvalUserId === null) {
        ui.showToast({ title: '请选择审批人' })
      } else {
       this.paySubmit()
      }
    },
    // 保存为草稿
    saveDraft () {
      if (this.askOffReason === '') {
        ui.showToast({ title: '请输入请假事由' })
      } else if (this.approvalUserId === null) {
        ui.showToast({ title: '请选择审批人' })
      } else {
       this.paySubmit()
      }
    },
    paySubmit () {
      ui.showToast({ title: '提交成功', icon: 'success' })
      setTimeout(() => {
        ui.navigateBack()
      }, 1000)
    }
  },
  // 日期组件计算
  created () {
  },
  mounted () {
    // 获取上一个页面传递过来的参数
    let getData = ui.getQuery()
    console.log("参数",getData)
    // 获取当前日期
    let today = new Date()
    let year = today.getFullYear()
    let month = today.getMonth() + 1 
    let day = today.getDate()
    let hour = today.getHours()
    let minute = today.getMinutes()
    this.stimeValue = hour + ':' + minute
    this.sdataValue = year + '-' + month + '-' + day
    this.etimeValue = hour + ':' + minute
    this.edataValue = year + '-' + month + '-' + day

  }
}
