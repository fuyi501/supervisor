    <ui-view class="map_container" style="{{ {height:mapHeight} }}">
      <ui-map 
      class="map" 
      id="map" 
      longitude="{{longitude}}" 
      latitude="{{latitude}}" 
      scale="14" 
      markers="{{markers}}"
      show-location="true" 
      bindmarkertap="makertap">
      </ui-map>
    </ui-view>

    <ui-view class="qiandaoCentent">
      <ui-row height="100" border-bottom>
        <ui-col width="80" align="center" style="margin-top:10px;">
          <ui-view class="left_icon">傅毅</ui-view>
        </ui-col>
        <ui-col space-right="10" vertical-align="middle">
