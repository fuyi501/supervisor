            <ui-view class="qiandao-name">{{qianDaoList.name}}</ui-view>
            <ui-view class="qiandao-time">
              {{qianDaoList.time}} ，今日已签到 {{qianDaoList.count}} 次
            </ui-view>
            <ui-view class="qiandao-addr">
              <ui-icon type="map1" size="12" color="#333"></ui-icon>
              {{qianDaoList.address}}
            </ui-view>
          </ui-view>
