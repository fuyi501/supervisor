<script>

import dayjs from '#/static/utils/dayjs'

const sourceType = [['camera'], ['album'], ['camera', 'album']]
const sizeType = [['compressed'], ['original'], ['compressed', 'original']]

export default {
  config: {
    navigationStyle: 'custom',
    backgroundColor: '#F6F6F6',
    disableIosGesture: true,
    navigationBarTextStyle: 'white',
    delay: true
  },
  data () {
    return {
      pageTitle: '巡查记录',
      pageTitleRight: '统计',
      itemName: '标段3',
      xunChaTime: '', // 巡查时间
      isReply: false, // 是否回复
      xunChaPosition: '', // 巡查部位

      // 存在的问题
      itemProblem: '', 
      // 处理意见
      resolution: '',
      // 附件
      accessoryContent: [],
      imgs: []
    }
  },
  methods: {
    // 返回按钮
    navigateBack () {
      ui.showConfirm({
        content: '表单尚未提交，你要离开么？',
        confirmButtonText: '离开',
        cancelButtonText: '继续填写',
        success: (result) => {
          if (result.confirm) {
            // 取消返回键监听事件
            ui.offBackButtonClick({
              listener: this.navigateBack
            })
            ui.navigateBack()
          }
        }
      })
    },
    // 是否回复
    handleSwitchChange (val) {
      this.isReply = val
    },
    // 添加附件
    addAccessory () {
      this.chooseImage(2)
    },
    chooseImage (index) {
      ui.chooseImage({
        sourceType: sourceType[index],
        sizeType: sizeType[1],
        success: (res) => {
          res.tempFilePaths.forEach((item, index) => {
            this.accessoryContent.push(item)
          })
        },
        fail: (res) => {
          console.log("添加照片失败")
        }
      })
    },
    // 提交
    submit () {
      if (this.itemName === '') {
        ui.showToast({ title: '请输入工程名称' })
      } else if (this.itemProblem === '') {
        ui.showToast({ title: '请输入存在的问题' })
      } else if (this.resolution === '') {
        ui.showToast({ title: '请输入处理意见' })
      } else {
       this.paySubmit()
      }
    },
    paySubmit () {
      ui.showToast({ title: '提交成功', icon: 'success' })
      setTimeout(() => {
        ui.navigateBack()
      }, 1000)
    }
  },
  mounted () {
    
    this.xunChaTime = dayjs().format("YYYY-MM-DD HH:mm")

  }
}
</script>

